{
  "compilerOptions": {
    "lib": ["dom"],
    "composite": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "es6",
    "esModuleInterop": true,
    "jsx": "react",
    "allowJs": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "rootDir": "./src/",
    "outDir": "./lib",
  },
  "include": [
    "./src"
  ],
  "references": [],
}
